{
    "name":        "mcadare/flash-message-handler-bundle",
    "type":        "symfony-bundle",
    "description": "FlashMessageHandlerBundle is an FlashMessageHandler integration bundle for Symfony.",
    "keywords":    [
        "Symfony2",
        "events"
    ],
    "homepage":    "http://github.com/mcadare/FlashMessageHandlerBundle",
    "license":     "MIT",

    "authors": [
        {
            "name": "Meven",
            "email": "meven.cadare@gmail.com"
        }
    ],

    "minimum-stability": "dev",
    "require": {
        "php":                          ">=5.3.3",
        "symfony/framework-bundle":     "~2.3",
        "mcadare/flash-message-handler":      "*"
    },

    "suggest": {
        "mcadare/eventhub-bundle":     "to trigger flash message events based on configuration"
    },

    "autoload": {
        "psr-0": {
            "MCadare\\Symfony\\FlashMessageHandlerBundle\\": ""
        }
    },

    "target-dir": "MCadare/Symfony/FlashMessageHandlerBundle",

    "extra": {
        "branch-alias": {
            "dev-master": "0.1-dev"
        }
    }
}